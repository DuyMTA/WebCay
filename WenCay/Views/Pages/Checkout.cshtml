
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<!-- ##### Breadcrumb Tiny Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Tiny -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(../Content/asset/img/bg-img/24.jpg);">
        <h2>Checkout</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Trang Chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Checkout</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Tiny End ##### -->
<!-- ##### Checkout Tiny Start ##### -->
<div class="checkout_area mb-100">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-12 col-lg-7">
                <div class="checkout_details_area clearfix">
                    <h5>Hóa Đơn Chi Tiết</h5>
                    <form action="#" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="first_name">Họ *</label>
                                <input type="text" class="form-control" id="first_name" value="" required>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="last_name">Tên *</label>
                                <input type="text" class="form-control" id="last_name" value="" required>
                            </div>
                            <div class="col-12 mb-4">
                                <label for="email_address">Email *</label>
                                <input type="email" class="form-control" id="email_address" value="">
                            </div>
                            <div class="col-12 mb-4">
                                <label for="phone_number">Số Điện Thoại *</label>
                                <input type="number" class="form-control" id="phone_number" min="0" value="">
                            </div>
                            <div class="col-12 mb-4">
                                <label for="company">Tên Công Ty</label>
                                <input type="text" class="form-control" id="company" value="">
                            </div>
                            <div class="col-12 mb-4">
                                <label for="company">Địa Chỉ *</label>
                                <input type="text" class="form-control" id="address" value="">
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="city">Thành Phố *</label>
                                <input type="text" class="form-control" id="city" value="">
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="state">Tỉnh *</label>
                                <input type="text" class="form-control" id="state" value="">
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="postcode">Mã Giảm giá</label>
                                <input type="text" class="form-control" id="postcode" value="">
                            </div>
                            <div class="col-md-12 mb-4">
                                <label for="order-notes">Ghi Chú Hóa Đơn</label>
                                <textarea class="form-control" id="order-notes" cols="30" rows="10" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center">
                                    <!-- Single Checkbox -->
                                    <div class="custom-control custom-checkbox d-flex align-items-center mr-30">
                                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                                        <label class="custom-control-label" for="customCheck1">Gửi đến địa chỉ khác?</label>
                                    </div>
                                    <!-- Single Checkbox -->
                                    <div class="custom-control custom-checkbox d-flex align-items-center">
                                        <input type="checkbox" class="custom-control-input" id="customCheck2">
                                        <label class="custom-control-label" for="customCheck2">Tạo một tài khoảnq?</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="checkout-content">
                    <h5 class="title--">Đơn Đặt Hàng Của Bạn</h5>
                    <div class="products">
                        <div class="products-data">
                            <h5>Sản phẩm:</h5>
                            <div class="single-products d-flex justify-content-between align-items-center">
                                <p>Cây xương rồng</p>
                                <h5>200.000 đ</h5>
                            </div>
                        </div>
                    </div>
                    <div class="subtotal d-flex justify-content-between align-items-center">
                        <h5>Tổng giá sản phẩm</h5>
                        <h5>200.000 đ</h5>
                    </div>
                    <div class="shipping d-flex justify-content-between align-items-center">
                        <h5>Tiền giao hàng</h5>
                        <h5>30.000 đ</h5>
                    </div>
                    <div class="order-total d-flex justify-content-between align-items-center">
                        <h5>Tổng hóa đơn</h5>
                        <h5>230.000 đ</h5>
                    </div>
                    <div class="checkout-btn mt-30">
                        <a href="#" class="btn alazea-btn w-100">Đặt Hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Checkout Tiny End ##### -->
