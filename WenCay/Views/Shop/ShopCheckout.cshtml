@model WenCay.Models.Entity.SANPHAM
@{
    ViewBag.Title = "ShopCheckout";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(/Asset/general/img/bg-img/24.jpg);">
        <h2>ĐẶT HÀNG</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index"><i class="fa fa-home"></i> Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="/Shop/Index"><i class="fa fa-home">Quầy hàng</i></a></li>
                        <li class="breadcrumb-item active" aria-current="page">Thanh toán</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Checkout Area Start ##### -->
<div class="checkout_area mb-100">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-12 col-lg-7">
                <div class="checkout_details_area clearfix">
                    <h5>Chi tiết mua sắm</h5>
                    <form action="#" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="first_name">Họ *</label>
                                <input type="text" class="form-control" id="first_name" value="" required>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="last_name">Tên *</label>
                                <input type="text" class="form-control" id="last_name" value="" required>
                            </div>
                            <div class="col-12 mb-4">
                                <label for="email_address">Email *</label>
                                <input type="email" class="form-control" id="email_address" value="">
                            </div>
                            <div class="col-12 mb-4">
                                <label for="phone_number">Điện thoại *</label>
                                <input type="number" class="form-control" id="phone_number" min="0" value="">
                            </div>
                            <div class="col-12 mb-4">
                                <label for="company">Công ty</label>
                                <input type="text" class="form-control" id="company" value="">
                            </div>
                            <div class="col-12 mb-4">
                                <label for="company">Địa chỉ *</label>
                                <input type="text" class="form-control" id="address" value="">
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="city">Thành phố *</label>
                                <input type="text" class="form-control" id="city" value="">
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="state">Tỉnh *</label>
                                <input type="text" class="form-control" id="state" value="">
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="country">Nước</label>
                                <select class="custom-select d-block w-100" id="country">
                                    <option value="usa">United States</option>
                                    <option value="uk">United Kingdom</option>
                                    <option value="ger">Germany</option>
                                    <option value="fra">France</option>
                                    <option value="ind">India</option>
                                    <option value="aus">Australia</option>
                                    <option value="bra">Brazil</option>
                                    <option value="cana">Canada</option>
                                    <option value="cana">VietNam</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="postcode">Mã Postcode/Zip</label>
                                <input type="text" class="form-control" id="postcode" value="">
                            </div>
                            <div class="col-md-12 mb-4">
                                <label for="order-notes">Ghi chú</label>
                                <textarea class="form-control" id="order-notes" cols="30" rows="10" placeholder="Ghi chú về việc đặt hàng,... đặc biệt là về vận chuyển."></textarea>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center">
                                    <!-- Single Checkbox -->
                                    <div class="custom-control custom-checkbox d-flex align-items-center mr-30">
                                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                                        <label class="custom-control-label" for="customCheck1">Vận chuyển đến nước khác?</label>
                                    </div>
                                    <!-- Single Checkbox -->
                                    <div class="custom-control custom-checkbox d-flex align-items-center">
                                        <input type="checkbox" class="custom-control-input" id="customCheck2">
                                        <label class="custom-control-label" for="customCheck2">Chưa có tài khoản?</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="checkout-content">
                    <h5 class="title--">Đơn hàng của bạn</h5>
                    <div class="products">
                        <div class="products-data">
                            <h5>Sản phẩm:</h5>
                            <div class="single-products d-flex justify-content-between align-items-center">
                                <p>Cây nha đam</p>
                                <h5>200000</h5>
                            </div>
                        </div>
                    </div>
                    <div class="subtotal d-flex justify-content-between align-items-center">
                        <h5>Phí phụ</h5>
                        <h5>200000</h5>
                    </div>
                    <div class="shipping d-flex justify-content-between align-items-center">
                        <h5>Vận chuyển</h5>
                        <h5>60000</h5>
                    </div>
                    <div class="order-total d-flex justify-content-between align-items-center">
                        <h5>Tổng tiền</h5>
                        <h5>260000</h5>
                    </div>
                    <div class="checkout-btn mt-30">
                        <a href="#" class="btn alazea-btn w-100">Xác nhận</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Checkout Area End ##### -->
